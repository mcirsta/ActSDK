				puts $::cdl_header ""
			}
		}
		
		cdl_option USBATTRI {
			display "USB 属性"
			flavor data
			default_value {"USBATTRI_8=\"GENERIC\""}
			no_define
			define 	ADDCONFIG
			description "
				描述USB属性，注意：value值的字符最大长度为8.
